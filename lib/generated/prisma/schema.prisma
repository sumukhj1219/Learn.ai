generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id              String    @id @default(uuid())
  name            String?
  email           String?   @unique
  srn             String?   @unique
  age             String?
  dob             String?
  intrest         String?
  goal            String?
  courseCompleted Int?
  Points          Int?
  courses         Courses[]
}

model Courses {
  id          String    @id @default(uuid())
  name        String?
  duration    String?
  completion  String?
  isCompleted Boolean
  studentId   String
  student     Student   @relation(fields: [studentId], references: [id])
  educatorId  String
  enrolled    Int
  educator    Educators @relation(fields: [educatorId], references: [id])
}

model Educators {
  id      String    @id @default(uuid())
  name    String?
  email   String?   @unique
  courses Courses[]
}
